<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f0f0f0"
    app:cardCornerRadius="5dp"
    app:cardElevation="4dp"
    android:layout_margin="10dp">


    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/item_projc_image"
            android:layout_width="100dp"
            android:layout_height="138dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_project_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:drawableStart="@mipmap/icon_author"
            android:drawablePadding="@dimen/dp_5"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_projc_image"
            app:layout_constraintTop_toTopOf="@+id/item_projc_image"
            tools:ignore="RtlCompat" />

        <TextView
            android:id="@+id/item_project_sourrcess"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="16dp"
            android:ellipsize="end"
            android:maxLines="4"
            android:text="TextView"
            android:textSize="@dimen/dp_10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/item_projc_image"
            app:layout_constraintTop_toBottomOf="@+id/item_project_title" />

        <TextView
            android:id="@+id/item_project_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:text="TextView"
            android:textSize="@dimen/dp_10"
            app:layout_constraintBottom_toBottomOf="@+id/item_projc_image"
            app:layout_constraintStart_toEndOf="@+id/item_projc_image" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:button="@drawable/home_item_like_selector"
            app:layout_constraintBottom_toBottomOf="@+id/item_project_date"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_project_date" />
    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
