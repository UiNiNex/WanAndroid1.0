<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <q.rorbin.verticaltablayout.VerticalTabLayout
        android:id="@+id/navigation_tab"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@color/navigation_tab"
        app:indicator_color="@color/white"
        app:indicator_gravity="fill"
        app:tab_height="40dp"
        app:tab_margin="12dp"
        app:tab_mode="scrollable">

    </q.rorbin.verticaltablayout.VerticalTabLayout>

    <View
        android:id="@+id/view_navigation"
        android:layout_width="0.8dp"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/navigation_tab"
        android:background="@color/navigation_view" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigation_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/view_navigation">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>
